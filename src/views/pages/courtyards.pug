extends ../layouts/page-details

include ../../blocks/components/breadcrumb/breadcrumb.pug
include ../../blocks/components/video/video.pug
include ../../blocks/modules/aside-nav/aside-nav.pug
include ../../blocks/modules/banner-top/banner-top.pug
include ../../blocks/modules/helper-sidebar/helper-sidebar.pug


block variables
    include ../../data/data.pug
    - const title = "МОЙ УМНЫЙ ШЛАГБАУМ"


block content


    +banner-top({
        title: 'Дворы многоквартирных домов',
        image: '/img/detail/courtyards'
    })

    section.section-page-details
        .container
            .page-details
                .page-details__aside

                    +aside-info({
                        text: 'Экономия и комфорт! Меньше затрат на и диспетчеризацию, выше комфорт от эксплуатации.'
                    })
                    +aside-nav('Дворы многоквартирных домов')
                    +aside-banner()

                .page-details__content
                    .page-details__page-container
                        .page-details__breabcrumbs
                            +breadcrumb([
                                'Главная',
                                'Особенности системы',
                                'Дворы многоквартирных домов',
                            ])

                        .page-details__wrp
                            .page-details__article
                                .formated-text
                                    p Эксплуатация шлагбаумов во дворах многоквартирных домов является серьёзной задачей, груз которой полностью ложится на плечи нескольких жителей, выбранных ответственными представителями на общем собрании.
                                    +picture("/img/common/courtyards-barrier")
                                    p Благодаря сервису «МОЙ УМНЫЙ ШЛАГБАУМ», выполнение данной задачи становится не сложнее работы с электронной почтой, поскольку большинство задач автоматизировано:
                                    ul
                                        li спецтранспорт проезжает автоматически или через резервный метод – вызов диспетчера;
                                        li доступ гражданскому транспорту также автоматически предоставляется в соответствии с настройкой базы данных доступа, или через резервные методы открытия;
                                        li деньги с жителей собирать не нужно, пользователи за эксплуатацию шлагбаумов платят напрямую обслуживающей организации;
                                        li также не потребуется собирать деньги на ремонт  и восстановление оборудования, в случае поломки или вандальных действий, поскольку платёж за эксплуатацию включает в себя обязательства по ремонту и восстановлению оборудования, вне зависимости от причин выхода из строя или хищения;
                                        li не нужно вызывать и ждать ремонтную бригаду, поскольку состояние объектов мониторится, как средствами визуального контроля, так и программно-аппаратными средствами сервиса;
                                        li с личным кабинетом работать максимально удобно как в веб-версии, так и через мобильные браузеры;
                                        li гибко настраиваемая система разовых и временных пропусков снимает все проблемы с доступом гостевого транспорта, доставки, такси и т.п.
                            .page-details__sidebar



block scripts
    script(src="/js/vendor.js")
    script(src="/js/common.js")

