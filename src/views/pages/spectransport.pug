extends ../layouts/page-details

include ../../blocks/components/breadcrumb/breadcrumb.pug

 
block variables
  include ../../data/data.pug
  - const title = "МОЙ УМНЫЙ ШЛАГБАУМ"
 

block content 

  section.section-banner-top
    .banner-top
        .banner-top__title
            h1 Распознавание спецтранспорта
        .banner-top__image
            +picture('/img/detail/special')

  section.section-page-details
    .page-details
        .page-details__aside
            .aside-info
                .aside-info__title Особенности системы
                .aside-info__desc Единственная нейросеть на рынке, распознающая спецтранспорт с минимальной погрешностью < 0,18% - 0,36%
            
            .aside-nav
                .aside-nav__list
                    nav
                        ul
                            li: a(href='#') Распознавание спецтранспорта
                            li: a(href='#') Распознавание госномеров и гражданских ТС
                            li: a(href='#') Вспомогательные методы открытия
                            li: a(href='#') Видеонаблюдение и видеоаналитика
                            li: a(href='#') Надёжное конечное устройство
                            li: a(href='#') Дворы многоквартирных домов
                            li: a(href='#') Многоуровневые и плоскостные паркинги
                            li: a(href='#') Дачные и коттеджные поселки
                            li: a(href='#') Торговые центры, магазины и рестораны
                            li: a(href='#') Гостиницы и дома отдыха
                            li: a(href='#') Промышленные, складские и логистческие центры

            .aside-banner
                .aside-banner__image
                    picture
                        img(src="/img/detail/banner-sidebar.jpg")
            
        .page-details__content
            .page-details__breabcrumbs
                +breadcrumb([
                    'Главная',
                    'Особенности системы',
                    'Распознавание спецтранспорта',
                ])

            .page-details__wrp
                .page-details__article
                .page-details__sidebar
 
block scripts
  script(src="/js/vendor.js") 
  script(src="/js/common.js") 